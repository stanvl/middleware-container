<assembly>
    <!--
        打成包的文件名为:{artifactId}-{version}-{id}.{format}
    -->
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <!--
            useProjectArtifact表示将项目本身生成的构件也包含在内，最终打包至输出包内的{outputDirectory}(lib)路径下
            -->
            <useProjectArtifact>true</useProjectArtifact>
            <!--
            outputDirectory设为lib，表示把依赖的jar包打包到lib文件夹下
            -->
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <!--拷贝bin文件夹-->
            <directory>bin</directory>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <!--拷贝conf文件夹-->
            <directory>conf</directory>
            <outputDirectory>/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <!--拷贝deploy文件夹-->
            <directory>deploy</directory>
            <outputDirectory>/deploy</outputDirectory>
        </fileSet>
        <fileSet>
            <!--拷贝webapps文件夹-->
            <directory>webapps</directory>
            <outputDirectory>/webapps</outputDirectory>
        </fileSet>
        <fileSet>
            <!--拷贝work文件夹-->
            <directory>work</directory>
            <outputDirectory>/work</outputDirectory>
        </fileSet>
        <fileSet>
            <!--拷贝logs文件夹-->
            <directory>logs</directory>
            <outputDirectory>/logs</outputDirectory>
        </fileSet>
        <fileSet>
            <!--拷贝bin文件夹-->
            <directory>target</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>bootstrap.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>